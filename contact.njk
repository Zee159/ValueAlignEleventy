<!-- Contact Us Content -->
<main class="flex-grow" role="main" aria-labelledby="contact-heading">
    <!-- Hero Section -->
    <section class="py-16 bg-white dark:bg-gray-800 text-center">
        <div class="container mx-auto px-6">
            <h1 id="contact-heading" class="text-5xl font-bold text-va-primary font-montserrat dark:text-green-400">Get in Touch</h1>
            <p class="text-xl text-gray-600 dark:text-gray-300 mt-4 max-w-2xl mx-auto">We'd love to hear from you! Whether you have a question, feedback, or just want to say hello, feel free to reach out.</p>
        </div>
    </section>

    <!-- Contact Form Section -->
    <section class="py-12 bg-gray-50 dark:bg-gray-700" aria-labelledby="form-heading">
        <div class="container mx-auto px-6">
            <div class="max-w-3xl mx-auto bg-white dark:bg-gray-800 p-8 sm:p-10 rounded-xl shadow-lg">
                <form id="contact-form" class="space-y-6" aria-labelledby="form-heading">
                    <h2 id="form-heading" class="sr-only">Contact Form</h2>
                    <div>
                        <label for="full-name" class="block text-sm font-medium text-va-text dark:text-gray-200 font-montserrat">Full Name</label>
                        <input type="text" name="full-name" id="full-name" required class="mt-1 block w-full px-3 py-2 border dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-va-primary dark:focus:ring-green-500 dark:bg-gray-700 dark:text-white sm:text-sm" aria-required="true" aria-invalid="false">
                    </div>

                    <div>
                        <label for="email" class="block text-sm font-medium text-va-text dark:text-gray-200 font-montserrat">Email Address</label>
                        <input type="email" name="email" id="email" required class="mt-1 block w-full px-3 py-2 border dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-va-primary dark:focus:ring-green-500 dark:bg-gray-700 dark:text-white sm:text-sm" aria-required="true" aria-invalid="false">
                    </div>

                    <div>
                        <label for="subject" class="block text-sm font-medium text-va-text dark:text-gray-200 font-montserrat">Subject (Optional)</label>
                        <input type="text" name="subject" id="subject" class="mt-1 block w-full px-3 py-2 border dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-va-primary dark:focus:ring-green-500 dark:bg-gray-700 dark:text-white sm:text-sm" aria-required="false">
                    </div>

                    <div>
                        <label for="message" class="block text-sm font-medium text-va-text dark:text-gray-200 font-montserrat">Message</label>
                        <textarea id="message" name="message" rows="4" required class="mt-1 block w-full px-3 py-2 border dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-va-primary dark:focus:ring-green-500 dark:bg-gray-700 dark:text-white sm:text-sm" aria-required="true" aria-invalid="false"></textarea>
                    </div>

                    <div>
                        <button type="submit" class="w-full bg-va-primary dark:bg-green-600 text-white font-montserrat font-semibold py-3 px-4 border border-transparent rounded-md shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 hover:bg-green-700 dark:hover:bg-green-700 transition-colors" aria-label="Send your message">
                            Send Message
                        </button>
                    </div>
                </form>
                
                <div id="form-submission-message" class="mt-6 text-center text-sm" style="display: none;" role="alert" aria-live="assertive"></div>

                <div class="mt-10 pt-8 border-t border-gray-200 dark:border-gray-600 text-center">
                    <h3 id="other-contact-heading" class="text-xl font-semibold text-va-text dark:text-gray-200 font-montserrat mb-3">Other Ways to Reach Us</h3>
                    <p class="text-gray-600 dark:text-gray-300">You can also email us directly at: <a href="mailto:info@valuealign.com" class="text-va-primary dark:text-green-400 hover:underline" aria-label="Email us at info@valuealign.com">info@valuealign.com</a></p>
                </div>
            </div>
        </div>
    </section>
</main>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Contact form handling
        const contactForm = document.getElementById('contact-form');
        const submissionMessageDiv = document.getElementById('form-submission-message');
        if (contactForm) {
            contactForm.addEventListener('submit', function(event) {
                event.preventDefault();
                submissionMessageDiv.textContent = 'Thank you for your message! We will get back to you shortly. (This is a simulation - no email was sent.)';
                submissionMessageDiv.className = 'mt-6 text-center text-sm text-green-600 dark:text-green-400';
                submissionMessageDiv.style.display = 'block';
                contactForm.reset(); // Clear the form fields

                setTimeout(() => {
                     submissionMessageDiv.style.display = 'none';
                }, 5000); // Hide message after 5 seconds
            });
        }
    });
</script>
