<div class="mb-6" role="banner">
    <h1 id="reflection-page-heading" class="text-3xl font-bold text-va-text dark:text-white font-montserrat">Today's Reflection</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 max-w-3xl">
        Take a moment to reflect on your day and how your actions aligned with your values.
        Daily reflection helps build self-awareness and reinforces your commitment to living in alignment.
    </p>
</div>
    
    <!-- Reflection Streak Section -->
    <section class="reflection-streak bg-va-card-bg dark:bg-gray-800 rounded-lg shadow-md p-6 mb-8" aria-labelledby="streak-heading">
        <h2 id="streak-heading" class="text-xl font-semibold text-va-heading dark:text-white font-montserrat mb-4">Your Reflection Streak</h2>
        
        <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between">
            <div class="flex items-center mb-4 sm:mb-0">
                <div class="bg-va-primary-light dark:bg-green-900 rounded-full p-3 mr-4">
                    <svg class="w-6 h-6 text-va-primary dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div>
                    <p class="text-gray-600 dark:text-gray-400">Current Streak</p>
                    <p class="text-2xl font-bold text-va-heading dark:text-white" id="current-streak">7 days</p>
                </div>
            </div>
            
            <div class="flex items-center">
                <div class="bg-blue-100 dark:bg-blue-900 rounded-full p-3 mr-4">
                    <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                </div>
                <div>
                    <p class="text-gray-600 dark:text-gray-400">Longest Streak</p>
                    <p class="text-2xl font-bold text-va-heading dark:text-white" id="longest-streak">15 days</p>
                </div>
            </div>
        </div>
        
        <!-- Visual Streak Calendar -->
        <div class="mt-6" id="streak-calendar" aria-label="Calendar showing your reflection streak">
            <div class="grid grid-cols-7 gap-2">
                <!-- Days of week labels -->
                <div class="text-center text-xs text-gray-500 dark:text-gray-400">Mon</div>
                <div class="text-center text-xs text-gray-500 dark:text-gray-400">Tue</div>
                <div class="text-center text-xs text-gray-500 dark:text-gray-400">Wed</div>
                <div class="text-center text-xs text-gray-500 dark:text-gray-400">Thu</div>
                <div class="text-center text-xs text-gray-500 dark:text-gray-400">Fri</div>
                <div class="text-center text-xs text-gray-500 dark:text-gray-400">Sat</div>
                <div class="text-center text-xs text-gray-500 dark:text-gray-400">Sun</div>
                
                <!-- Calendar cells will be populated by JavaScript -->
            </div>
        </div>
    </section>
    
    <!-- Reflection Form Section -->
    <section class="reflection-form bg-va-card-bg dark:bg-gray-800 rounded-lg shadow-md p-6 mb-8" aria-labelledby="reflection-heading">
        <h2 id="reflection-heading" class="text-xl font-semibold text-va-heading dark:text-white font-montserrat mb-4">Today's Reflection</h2>
        
        <div id="reflection-status" class="mb-6">
            <!-- Status message will be dynamically set by JavaScript -->
        </div>
        
        <form id="reflection-form" class="space-y-6">
            <!-- Daily Prompt -->
            <div class="prompt-container">
                <h3 class="text-lg font-medium text-va-text dark:text-white mb-2">Today's Prompt</h3>
                <blockquote class="border-l-4 border-va-primary dark:border-green-500 pl-4 italic text-gray-600 dark:text-gray-300" id="daily-prompt">
                    In what ways did your actions today reflect your core values? Were there moments where you felt disconnected from them?
                </blockquote>
            </div>
            
            <!-- Reflection Input -->
            <div class="reflection-input">
                <label for="reflection-text" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                    Your Reflection <span class="text-red-600">*</span>
                </label>
                <textarea id="reflection-text" name="reflection" rows="6" class="w-full rounded-md border-gray-300 dark:border-gray-700 shadow-sm focus:border-va-primary dark:focus:border-green-500 focus:ring focus:ring-va-primary dark:focus:ring-green-500 focus:ring-opacity-50 bg-white dark:bg-gray-900 text-gray-900 dark:text-white" placeholder="Write your reflection here..." aria-required="true"></textarea>
                <div class="mt-1 text-right">
                    <span id="char-count" class="text-sm text-gray-500 dark:text-gray-400">0/500</span>
                </div>
            </div>
            
            <!-- Values Selection -->
            <div class="values-selection">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Which values did you focus on today? <span class="text-red-600">*</span>
                </label>
                <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3" id="values-grid" role="group" aria-labelledby="values-label">
                    <!-- Values checkboxes will be populated by JavaScript -->
                </div>
                <p id="values-error" class="hidden mt-2 text-sm text-red-600 dark:text-red-400">Please select at least one value</p>
            </div>
            
            <!-- Alignment Score -->
            <div class="alignment-score">
                <label for="alignment-score" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    How aligned did you feel with your values today? <span class="text-red-600">*</span>
                </label>
                <div class="flex items-center">
                    <span class="text-sm text-gray-500 mr-2">1</span>
                    <input type="range" id="alignment-score" name="alignment-score" min="1" max="10" value="5" class="w-full h-2 bg-gray-200 dark:bg-gray-700 rounded-full appearance-none cursor-pointer" aria-required="true">
                    <span class="text-sm text-gray-500 ml-2">10</span>
                </div>
                <div class="mt-1 flex justify-between">
                    <span class="text-xs text-gray-500">Not aligned</span>
                    <span id="score-value" class="text-sm font-medium text-va-primary dark:text-green-400">5</span>
                    <span class="text-xs text-gray-500">Fully aligned</span>
                </div>
            </div>
            
            <!-- Submit Button -->
            <div class="flex justify-end">
                <button type="submit" id="submit-reflection" class="bg-va-primary dark:bg-green-600 text-white px-6 py-2 rounded-md text-base font-medium hover:bg-va-primary-dark dark:hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-va-primary dark:focus:ring-green-500 transition-colors">
                    Save Reflection
                </button>
            </div>
        </form>
    </section>
    
    <!-- Past Reflections Section -->
    <section class="past-reflections bg-va-card-bg dark:bg-gray-800 rounded-lg shadow-md p-6" aria-labelledby="past-heading">
        <h2 id="past-heading" class="text-xl font-semibold text-va-heading dark:text-white font-montserrat mb-4">Past Reflections</h2>
        
        <!-- Reflection Filter Controls -->
        <div class="flex flex-wrap items-center justify-between mb-6">
            <div class="flex items-center space-x-4 mb-4 sm:mb-0">
                <label for="reflection-filter" class="text-sm font-medium text-gray-700 dark:text-gray-300">Filter by:</label>
                <select id="reflection-filter" class="rounded-md border-gray-300 dark:border-gray-700 shadow-sm focus:border-va-primary dark:focus:border-green-500 focus:ring focus:ring-va-primary dark:focus:ring-green-500 focus:ring-opacity-50 bg-white dark:bg-gray-900 text-gray-900 dark:text-white text-sm py-1">
                    <option value="recent">Most Recent</option>
                    <option value="highest">Highest Alignment</option>
                    <option value="lowest">Lowest Alignment</option>
                </select>
            </div>
            
            <div>
                <button id="view-all-reflections" class="text-va-primary dark:text-green-400 hover:underline text-sm font-medium focus:outline-none focus:ring-2 focus:ring-va-primary dark:focus:ring-green-500 rounded-md">
                    View All Reflections
                </button>
            </div>
        </div>
        
        <!-- Past Reflections List -->
        <div id="past-reflections-list" class="space-y-6" role="list">
            <!-- Will be populated by JavaScript -->
            <p class="text-center text-gray-500 dark:text-gray-400 py-8" id="no-reflections-message">
                No past reflections found. Start your reflection journey today!
            </p>
        </div>
    </section>

<!-- Footer content is already included in the base layout -->

<!-- Page Specific Scripts -->
<script src="{{ '/js/reflection.js' | url }}"></script>

<!-- Status Message for Accessibility Announcements -->
<div id="reflection-status-announcer" class="sr-only" role="status" aria-live="polite"></div>
